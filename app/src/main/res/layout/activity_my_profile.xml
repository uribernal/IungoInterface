<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background14"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true">

            <LinearLayout
                android:id="@+id/natural"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="horizontal"
                android:background="@drawable/sea">

            </LinearLayout>



            <LinearLayout
                android:id="@+id/imageLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="50dp"

                    android:layout_height="175dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_iv_profile_image"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_unknown_male_profile"
                        app:civ_border_color="@color/blancoPastel"
                        app:civ_border_width="3dp" />


                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="70dp"
                        android:layout_alignTop="@+id/profile_iv_profile_image"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/profile_iv_profile_image"
                        android:layout_toRightOf="@+id/profile_iv_profile_image">
                        <TextView
                            android:id="@+id/tv_planes_apuntados"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:textColor="@color/blancoPastel"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:layout_below="@+id/textView2"
                            android:layout_centerHorizontal="true" />
                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Planes apuntados"
                            android:gravity="center_horizontal"
                            android:textColor="@color/blancoPastel"
                            android:textSize="14dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ll_myprofile_amigos"
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_alignTop="@+id/profile_iv_profile_image"
                        android:layout_marginLeft="12dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="50dp">
                        <TextView
                            android:id="@+id/tv_myprofile_number_friends"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:textColor="@color/blancoPastel"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:layout_below="@+id/textView"
                            android:layout_centerHorizontal="true" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Amigos"
                            android:gravity="center_horizontal"
                            android:textColor="@color/blancoPastel"
                            android:textSize="14dp"
                            android:id="@+id/textView"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true" />
                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/profile_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:textColor="@color/blancoPastel"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/profile_tv_edad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/blancoPastel"
                        android:layout_gravity="center"
                        android:layout_marginTop="24dp"
                        android:text="years" />


                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="310dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <android.support.v7.widget.RecyclerView

                    android:id="@+id/recycler_view_fotos_perfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:scrollbars="vertical"
                    android:adjustViewBounds="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />


            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
