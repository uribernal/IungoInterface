<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="2">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        cardview:cardBackgroundColor="@color/colorPrimary"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KITESURF"
                android:textSize="15dp"
                android:textColor="@color/colorAccent"
                android:id="@+id/plan_header"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <ImageView
                android:id="@+id/plan_header_foto"
                android:layout_width="165dp"
                android:layout_height="115dp"
                android:fitsSystemWindows="true"
                android:scaleType="centerCrop"
                android:src="@drawable/kite" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical|right"
                app:civ_border_color="@color/accent"
                app:civ_border_width="0.5dp" />


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="-7dp"
                android:layout_toRightOf="@+id/profile_image1"
                android:gravity="center_vertical|right"
                app:civ_border_color="@color/accent"
                app:civ_border_width="0.5dp" />


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="-7dp"
                android:layout_toRightOf="@+id/profile_image2"
                android:gravity="center_vertical|right"
                app:civ_border_color="@color/accent"
                app:civ_border_width="0.5dp" />

            <TextView
                android:id="@+id/plan_number_of_users"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center|right"
                android:layout_toEndOf="@+id/profile_image3"
                android:layout_toRightOf="@+id/profile_image3"
                android:textColor="@color/colorAccent"
                android:gravity="center_vertical|right"
                android:textSize="10dp"
                android:text="... and 35 more"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/tv_itemPlan_occupacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:layout_centerVertical="true"
                android:textColor="@color/colorAccent"
                android:gravity="center_vertical|right"
                android:layout_marginLeft="140dp"
                android:text="2/3"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
